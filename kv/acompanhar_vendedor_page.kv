<AcompanharVendedorPage>:

    FloatLayout:
        canvas: 
            Rectangle:
                size: self.size
                pos: self.pos
                source: 'icones/bg1.png'

        #inserir botao
        LabelButton:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: 'icones/botao.png' if self.state == "normal" else 'icones/botao_apertado.png'
            text: 'Adicionar Vendedor'
            pos_hint: {'right': 0.9, 'top': 0.55}
            size_hint: 0.8, 0.2
            on_release: app.adicionar_vendedor(id_outro_vendedor.text)

# label do id estilizado
        Label:
            pos_hint: {'right': 0.9, 'top': 0.8}
            size_hint: 0.8, 0.1
            text: 'Insira o [color=#00CFDB]ID de outro vendedor[/color] para acompanha-lo'
            bold: True
            markup: True

# Caixa de texto
        TextInput:
            id : id_outro_vendedor
            hint_text: "#1000"
            pos_hint: {'right': 0.9, 'top': 0.7}
            size_hint: 0.8, 0.1

# label mensagem
        Label:
            text: ''
            id: mensagem_vendedor
            pos_hint: {'right': 0.9, 'top': 0.30}
            size_hint: 0.8, 0.1
            markup: True

# botao voltar
        FloatLayout:
            pos_hint: {'right': 1, 'top': 0.12}
            size_hint: 1, 0.12
            canvas: 
                Color: 
                    rgb: utils.get_color_from_hex('#006D7E')
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                pos_hint: {'right': 0.2, 'top': 0.9}
                size_hint: 0.2, 0.8
                source: 'icones/voltar.png'
                on_release: app.mudar_tela('ajustes_page')