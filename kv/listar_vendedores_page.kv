<ListarVendedoresPage>:

    FloatLayout:
        canvas: 
            Rectangle:
                size: self.size
                pos: self.pos
                source: 'icones/bg1.png'

# scrow da tela central da home page
        ScrollView:
            pos_hint: {"right": 0.97, "top": 1}
            size_hint: 0.94, 0.88
            GridLayout:
                cols: 1
                id: lista_vendedores
                spacing: 2, 2
                
# Formatacao padrao para scroll vertical ( horizontal Ã© inverter y por x, height por weight e row por collumn )
                size_hint_y: None
                height: self.minimum_height
                row_default_height: "100dp"
                row_force_default: True
# botao voltar
        FloatLayout:
            pos_hint: {'right': 1, 'top': 0.12}
            size_hint: 1, 0.12
            canvas: 
                Color: 
                    rgb: utils.get_color_from_hex('#006D7E')
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                pos_hint: {'right': 0.2, 'top': 0.9}
                size_hint: 0.2, 0.8
                source: 'icones/voltar.png'
                on_release: app.mudar_tela('home_page')


