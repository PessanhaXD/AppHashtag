<FotoPerfilPage>:

    FloatLayout:
        canvas: 
            Rectangle:
                size: self.size
                pos: self.pos
                source: 'icones/bg1.png'
            Color: 
                rgba: (0, 0, 0, 0.5)
            Rectangle:
                size: (self.width * 0.93, self.height * 0.75)  
                pos: (self.x + 30, self.y + 50)  
                
        Label:
            pos_hint: {'right': 0.85, 'top': 0.97}
            size_hint: 0.7, 0.1
            text: 'Selecione sua Foto de Perfil'
            bold: True
# lista de imagens
        ScrollView:
            pos_hint: {'right': 0.97, 'top': 0.85}
            size_hint: 0.94, 0.73
            GridLayout
                cols: 3
                id: lista_fotos_perfil
# Formatacao padrao para scroll vertical ( horizontal Ã© inverter y por x, height por weight e row por collumn )
                size_hint_y: None
                height: self.minimum_height
                row_default_height: "90dp"
                row_force_default: True
                spacing: 5, 5

# botao voltar
        FloatLayout:
            pos_hint: {'right': 1, 'top': 0.12}
            size_hint: 1, 0.12
            canvas: 
                Color: 
                    rgb: utils.get_color_from_hex('#006D7E')
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                pos_hint: {'right': 0.2, 'top': 0.9}
                size_hint: 0.2, 0.8
                source: 'icones/voltar.png'
                on_release: app.mudar_tela('ajustes_page')